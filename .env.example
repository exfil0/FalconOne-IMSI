# FalconOne Environment Variables Template
# Copy this file to .env and fill in your values

# =============================================================================
# PHASE 1: SECURITY CONFIGURATION
# =============================================================================

# Secret Key for Flask sessions and CSRF tokens
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
FALCONONE_SECRET_KEY=your-secret-key-here-replace-this-value

# Database Encryption Password (SQLCipher)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
DATABASE_ENCRYPTION_KEY=your-database-encryption-password-here

# Dashboard Admin Credentials (CHANGE THESE!)
DASHBOARD_ADMIN_USERNAME=admin
DASHBOARD_ADMIN_PASSWORD=change-this-password-immediately

# JWT Secret for API authentication
JWT_SECRET_KEY=your-jwt-secret-key-here

# =============================================================================
# PHASE 1: API RATE LIMITING
# =============================================================================

# Rate limiting configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100 per hour
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/0

# =============================================================================
# PHASE 2: EMAIL NOTIFICATIONS
# =============================================================================

# SMTP Configuration for email alerts
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_ADDRESS=falconone-alerts@example.com
SMTP_USE_TLS=true

# =============================================================================
# PHASE 2: CELERY TASK QUEUE
# =============================================================================

# Redis/RabbitMQ for Celery background tasks
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# PHASE 3: O-RAN INTEGRATION
# =============================================================================

# O-RAN Near-RT RIC configuration
ORAN_RIC_ENDPOINT=http://localhost:38000
ORAN_E2_PORT=36421
ORAN_XAPP_NAME=falconone-xapp

# =============================================================================
# PHASE 4: PRODUCTION DEPLOYMENT
# =============================================================================

# Production mode flags
FLASK_ENV=production
FLASK_DEBUG=false
WORKERS=4
WORKER_CLASS=gevent
BIND_ADDRESS=0.0.0.0:5000

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/falconone/falconone.log
AUDIT_LOG_DIR=/var/log/falconone/audit

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database paths
DATABASE_PATH=logs/falconone.db
DATABASE_BACKUP_DIR=backups/database
DATABASE_ARCHIVE_DAYS=90

# =============================================================================
# SDR HARDWARE CONFIGURATION
# =============================================================================

# SDR device preferences
SDR_PREFERRED_DEVICE=USRP
SDR_FALLBACK_DEVICES=HackRF,BladeRF,LimeSDR
SDR_AUTO_FAILOVER=true
SDR_FAILOVER_TIMEOUT=10

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================

# Model cache directory
MODEL_CACHE_DIR=/var/cache/falconone/models

# GPU acceleration
USE_GPU=false
GPU_MEMORY_LIMIT=2048

# Online learning
ONLINE_LEARNING_ENABLED=false
MODEL_UPDATE_INTERVAL=3600

# =============================================================================
# COMPLIANCE & LEGAL
# =============================================================================

# Data retention policy
DATA_RETENTION_DAYS=90
AUTO_DELETE_OLD_DATA=true

# GDPR/CCPA compliance
GDPR_ENABLED=true
USER_DATA_EXPORT_ENABLED=true
USER_DATA_DELETION_ENABLED=true

# =============================================================================
# MONITORING & METRICS
# =============================================================================

# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Health check endpoint
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Optional: Sentry error tracking
SENTRY_DSN=

# Optional: Slack notifications
SLACK_WEBHOOK_URL=

# Optional: PagerDuty integration
PAGERDUTY_API_KEY=

# =============================================================================
# DEVELOPMENT FLAGS
# =============================================================================

# Enable/disable safety checks for development
FARADAY_CAGE_REQUIRED=false
ETHICAL_MODE=true
RESEARCH_MODE=true

# =============================================================================
# NOTES
# =============================================================================
# - Never commit .env files to version control
# - Use environment-specific .env files (.env.development, .env.production)
# - Rotate secrets regularly
# - Use strong passwords (min 32 characters)
# - Enable encryption at rest for production
